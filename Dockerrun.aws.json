{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "node-server",
      "host": {
        "sourcePath": "/opt/node-server"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-server",
      "image": "node:4.1",
      "memory": 128,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-config",
          "containerPath": "/opt/node-server"
        }
      ]
    }
  ]
}