{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "node-server-src",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-server",
      "image": "node:4.1",
      "memory": 128,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-server-src",
          "containerPath": "/opt/node-server-src"
        }
      ],
      "command": ["node", "/opt/node-server-src/server.js"]
    }
  ]
}